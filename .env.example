# Kno-It Environment Variables
# Copy this to .env and fill in your API keys

# At least one required
GEMINI_API_KEY=your-gemini-key
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
DEEPSEEK_API_KEY=your-deepseek-key

# Optional: Web grounding (alternative to Gemini Google Search)
# Free: 2K queries/month | Paid: $5/1K queries
BRAVE_SEARCH_API_KEY=your-brave-search-key

# Optional: Default settings
DEFAULT_RESEARCH_DEPTH=standard
DEFAULT_PRIMARY_MODEL=gemini-2.5-flash
DEFAULT_VALIDATION_MODEL=claude-sonnet-4.5
